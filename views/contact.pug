extends base.pug

block scripts 
    script(src='/static/index.js')

block style 
    style
      include ../static/style.css
      include ../static/contact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myform") 
            input(type="text",class="myinput", name="name" placeholder="Enter your name")
            input(type="number",class="myinput", name="phone" placeholder="Phone number")
            input(type="email",class="myinput", name="email" placeholder="Gmail Id")
            input(type="number",class="myinput", name="order" placeholder="Your Order ID")
            textarea(name="textarea", cols="30", rows="10" type="text" class="myinput" placeholder="Send Your Complaints Here") 
            button(class="btn")
                | Submit
